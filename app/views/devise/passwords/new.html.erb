<div class="container-fluid container-fluid-admin bckg-dark">
  <div class="login-form centered">
    <div class="row">
      <div class="col-sm-12 content bckg-dark-light">
        <h2 class="text-center fix-title-login">Esqueceu sua senha?</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email"%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Recuperar minha senha", class: "btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
